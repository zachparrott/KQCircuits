"""
Creates a ground plane grid covering the top cell bounding box, except the parts in grid avoidance layer. Requires at
least one cell to exist in the current layout. Creates the grid for a single face
"""

from kqcircuits.defaults import default_layers
from kqcircuits.klayout_view import KLayoutView
from kqcircuits.util.groundgrid import insert_ground_grid

cell = KLayoutView(current=True).active_cell

if not cell:
  raise ValueError('Create a cell first')

face = "1t1"
grid_mag_factor = 1

layout = cell.layout()
grid_area = cell.bbox_per_layer(layout.layer(default_layers[f"{face}_base_metal_gap_wo_grid"]))
insert_ground_grid(
    target_cell=cell,
    target_layer=default_layers[f"{face}_ground_grid"],
    grid_area=grid_area,
    protection=cell.begin_shapes_rec(layout.layer(default_layers[f"{face}_ground_grid_avoidance"])),
    grid_step=10 * (1 / layout.dbu) * grid_mag_factor,
    grid_size=5 * (1 / layout.dbu) * grid_mag_factor,
)
